<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Vizza</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    
    <meta name="description" content="Vizza - Trouvez facilement les exigences de visa pour votre prochain voyage">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-airplane me-2"></i>
                Vizza
            </a>
            
            <!-- Toggle button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house me-1"></i>
                            Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/search">
                            <i class="bi bi-search me-1"></i>
                            Recherche
                        </a>
                    </li>
                    <li class="nav-item" id="favorites-nav" style="display: none;">
                        <a class="nav-link" href="/favorites">
                            <i class="bi bi-star me-1"></i>
                            Mes Favoris
                            <span class="badge bg-light text-dark ms-1" id="favorites-count">0</span>
                        </a>
                    </li>
                </ul>
                
                <!-- User menu -->
                <ul class="navbar-nav">
                    <!-- If user is logged in -->
                    <li class="nav-item dropdown" id="user-menu" style="display: none;">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>
                            <span id="user-name">Utilisateur</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/profile">
                                    <i class="bi bi-person me-2"></i>
                                    Mon Profil
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="#" id="logout-btn">
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    <!-- If user is not logged in -->
                    <li class="nav-item" id="login-nav">
                        <a class="nav-link" href="/login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>
                            Connexion
                        </a>
                    </li>
                    <li class="nav-item" id="register-nav">
                        <a class="nav-link" href="/register">
                            <i class="bi bi-person-plus me-1"></i>
                            Inscription
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Flash messages -->
    <div id="flash-messages" class="container mt-3">
        <!-- Messages will be inserted here by JavaScript -->
    </div>
    
    <!-- Main content -->
    <main class="flex-grow-1">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <div class="row justify-content-center">  <!-- Flexbox Bootstrap to change the alignment of flex items on the main axis (centrage horizontal) -->
                    <div class="col-lg-8 text-center">
                        <h1 class="hero-title">
                            <i class="bi bi-airplane me-3"></i>
                            Trouvez votre visa
                        </h1>
                        <p class="hero-subtitle">
                            Découvrez instantanément les exigences de visa pour votre prochaine destination
                        </p>
                        
                        <!-- Recherche rapide -->
                        <div class="card mt-4 shadow-lg">
                            <div class="card-body p-4">
                                <form id="quick-search-form">
                                    <div class="row g-3 align-items-end">  <!-- g = gutter = espacement entre les colonnes / align-... = alignement vertical vers le bas -->
                                        <div class="col-md-4">  <!-- col-md-4 = 3 colonnes dès la tablette -->
                                            <label for="from-country" class="form-label">
                                                <i class="bi bi-geo-alt me-1"></i>
                                                Depuis
                                            </label>
                                            <select class="form-select" id="from-country" required>
                                                <option value="">Choisir un pays...</option>
                                                <!-- Options chargées dynamiquement -->
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="to-country" class="form-label">
                                                <i class="bi bi-geo-alt-fill me-1"></i>
                                                Vers
                                            </label>
                                            <select class="form-select" id="to-country" required>
                                                <option value="">Choisir un pays...</option>
                                                <!-- Options chargées dynamiquement -->
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-warning btn-lg w-100">
                                                <i class="bi bi-search me-2"></i>
                                                Rechercher
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Résultat de recherche rapide -->
        <section id="quick-result" class="section" style="display: none;">  <!-- section cachée qui n'apparait que si un resultat est trouvé (fonction showQuickSearchResult()) -->
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div id="visa-result-card" class="visa-card">
                            <!-- Résultat inséré dynamiquement -->
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Statistiques -->
        <section class="section bg-light">
            <div class="container">
                <div class="row text-center">
                    <div class="col-12">
                        <h2 class="section-title">Vizza en chiffres</h2>
                    </div>
                </div>
                
                <div class="row g-4" id="stats-container">
                    <!-- Statistiques chargées dynamiquement -->
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon">
                                <i class="bi bi-globe"></i>
                            </div>
                            <div class="stats-number" id="total-countries">-</div>
                            <div class="stats-label">Pays disponibles</div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon">
                                <i class="bi bi-passport"></i>
                            </div>
                            <div class="stats-number" id="total-visas">-</div>
                            <div class="stats-label">Relations visa</div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="stats-number" id="green-visas">-</div>
                            <div class="stats-label">Sans visa requis</div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="stats-card">
                            <div class="stats-icon">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="stats-number">1</div>
                            <div class="stats-label">Voyageur satisfait (toi !)</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Comment ça marche -->
        <section class="section">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="section-title">Comment ça marche ?</h2>
                        <p class="section-subtitle">
                            Trouvez les informations de visa en 3 étapes simples
                        </p>
                    </div>
                </div>
                
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="mb-4">
                                <div class="bg-primary text-white rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                    style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                                    1
                                </div>
                            </div>
                            <h4>Sélectionnez vos pays</h4>
                            <p class="text-muted">
                                Choisissez votre pays de départ et votre destination parmi nos 10 pays disponibles.
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="mb-4">
                                <div class="bg-success text-white rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                    style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                                    2
                                </div>
                            </div>
                            <h4>Obtenez les informations</h4>
                            <p class="text-muted">
                                Découvrez instantanément les exigences de visa avec des informations détaillées.
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="mb-4">
                                <div class="bg-warning text-white rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                                    style="width: 80px; height: 80px; font-size: 2rem; font-weight: bold;">
                                    3
                                </div>
                            </div>
                            <h4>Ajoutez aux favoris</h4>
                            <p class="text-muted">
                                Créez un compte et sauvegardez vos destinations préférées pour un accès rapide.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to action -->
        <section class="section bg-gradient text-white">
            <div class="container text-center">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <h2 class="mb-4">Prêt à planifier votre voyage ?</h2>
                        <p class="mb-4 fs-5">
                            Créez votre compte gratuitement et accédez à toutes les fonctionnalités de Vizza.
                        </p>
                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            <a href="/register" class="btn btn-light btn-lg">
                                <i class="bi bi-person-plus me-2"></i>
                                Créer un compte
                            </a>
                            <a href="/search" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-search me-2"></i>
                                Explorer maintenant
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>
                        <i class="bi bi-airplane me-2"></i>
                        Vizza
                    </h5>
                    <p class="text-muted">
                        Trouvez facilement les exigences de visa pour votre prochain voyage.
                    </p>
                </div>
                <div class="col-md-6">
                    <h6>Liens rapides</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none">Accueil</a></li>
                        <li><a href="/search" class="text-muted text-decoration-none">Recherche</a></li>
                        <li><a href="/api/visas/countries" class="text-muted text-decoration-none">API</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small class="text-muted">
                        © 2025 Vizza - Projet Holberton
                    </small>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        Développé avec <i class="bi bi-heart-fill text-danger"></i> par Aurèle Périllat
                    </small>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/api.js"></script>
    <script src="/js/auth.js"></script>
    <script src="/js/main.js"></script>
    
    <!-- Page-specific JavaScript -->
    <% if (typeof pageScript !== 'undefined') { %>
        <script src="<%= pageScript %>"></script>
    <% } %>
</body>
</html>